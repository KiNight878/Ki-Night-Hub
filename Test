-- Primeiro, carregue a biblioteca Orion
local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()

-- Crie uma janela
local Window = OrionLib:MakeWindow({Name = "Exemplo de Menu", HidePremium = false, SaveConfig = true, ConfigFolder = "ExemploMenuConfig"})

-- Crie uma aba
local Tab = Window:MakeTab({
    Name = "Menu",
    Icon = "rbxassetid://4483345998", -- Ícone para a aba (opcional)
    PremiumOnly = false
})

-- Adicione seções e botões ao menu
Tab:AddSection({
    Name = "Opções de Jogo"
})

Tab:AddButton({
    Name = "Novo Jogo",
    Callback = function()
        print("Novo Jogo selecionado")
    end    
})

Tab:AddButton({
    Name = "Carregar Jogo",
    Callback = function()
        print("Carregar Jogo selecionado")
    end    
})

Tab:AddButton({
    Name = "Opções",
    Callback = function()
        print("Opções selecionado")
    end    
})

Tab:AddButton({
    Name = "Sair",
    Callback = function()
        print("Sair selecionado")
        game:Shutdown() -- Fecha o jogo
    end    
})

-- Inicia a GUI
OrionLib:Init()
